{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash ./build-app.sh"
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "LOG_LEVEL": "warning"
      }
    },
    "staging": {
      "variables": {
        "APP_ENV": "staging",
        "APP_DEBUG": "true",
        "LOG_LEVEL": "debug"
      }
    }
  }
}
